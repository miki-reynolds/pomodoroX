{
    "manifest_version": 3,
    "name": "Pomodoro X",
    "version": "1.0.0",
  
    "action": {
        "default_icon": "/media/logo.png",
        "default_title": "Pomodoro X",
        "default_popup": "popup/popup.html"
    },
    "description": "A Kawaii Pomodoro Extension to boost your productivity with customizable time intervals while lifting your mood with personalizable themes and sounds!",
    "icons": {
        "16": "/media/logo.png", 
        "48": "/media/logo.png",
        "128": "/media/logo.png" 
    },
    "permissions": ["storage", "alarms", "notifications"],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options/options.html"
  }